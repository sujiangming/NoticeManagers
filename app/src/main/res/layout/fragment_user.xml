<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="我的"
        android:textColor="@android:color/white" />

    <RelativeLayout
        android:id="@+id/rl_info"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:paddingLeft="@dimen/space_15_dp"
        android:layout_marginTop="@dimen/space_12_dp"
        android:background="@drawable/home_item_press">

        <com.jdry.noticemanagers.mvp.view.custom.CircleImageView
            android:id="@+id/iv_user_head"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/common_btn_xunjian3x"
            app:border_color="@color/colorAccent"
            app:border_width="@dimen/space_2_dp" />

        <TextView
            android:id="@+id/tv_account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_25_dp"
            android:layout_marginTop="@dimen/space_18_dp"
            android:layout_alignTop="@id/iv_user_head"
            android:layout_toRightOf="@id/iv_user_head"
            android:text="姓名：张三"
            android:textColor="@color/color353535"
            android:textSize="@dimen/font_16_sp" />

        <TextView
            android:id="@+id/tv_account_pos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_25_dp"
            android:layout_marginTop="@dimen/space_8_dp"
            android:layout_below="@id/tv_account_name"
            android:layout_toRightOf="@id/iv_user_head"
            android:text="部门：综合部"
            android:textColor="@color/color686868"
            android:textSize="@dimen/font_14_sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_help_center"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="@dimen/space_20_dp"
        android:background="@drawable/home_item_press"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_20_dp"
        android:paddingRight="@dimen/space_20_dp">

        <ImageView
            android:layout_width="@dimen/space_30_dp"
            android:layout_height="@dimen/space_30_dp"
            android:layout_marginRight="@dimen/space_12_dp"
            android:src="@drawable/about" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="关于"
            android:textColor="#030303"
            android:textSize="@dimen/font_16_sp" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/more" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_set_password"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="@dimen/space_20_dp"
        android:background="@drawable/home_item_press"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_20_dp"
        android:paddingRight="@dimen/space_20_dp">

        <ImageView
            android:layout_width="@dimen/space_30_dp"
            android:layout_height="@dimen/space_30_dp"
            android:layout_marginRight="@dimen/space_12_dp"
            android:src="@drawable/verifycode" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="修改密码"
            android:textColor="#030303"
            android:textSize="@dimen/font_16_sp" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/more" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_set"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="@dimen/space_15_dp"
        android:layout_marginTop="@dimen/space_15_dp"
        android:background="@drawable/home_item_press"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_20_dp"
        android:paddingRight="@dimen/space_20_dp">

        <ImageView
            android:layout_width="@dimen/space_30_dp"
            android:layout_height="@dimen/space_30_dp"
            android:layout_marginRight="@dimen/space_12_dp"
            android:src="@drawable/log_out" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="退出"
            android:textColor="#030303"
            android:textSize="@dimen/font_16_sp" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/more" />
    </LinearLayout>

</LinearLayout>