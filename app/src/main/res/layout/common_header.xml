<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="44dp">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorNavigation"
        android:gravity="center"
        android:text="标题"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font_16_sp" />

    <com.jdry.noticemanagers.mvp.view.custom.RichText
        android:id="@+id/back_image"
        android:layout_width="@dimen/space_76_dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/back_and_set"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/space_5_dp"
        android:paddingRight="@dimen/space_12_dp"
        android:scaleType="centerInside"
        android:text="@string/nav_back"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font_14_sp"
        app:drawable_height="@dimen/space_44_dp"
        app:drawable_src="@drawable/btn_back3x"
        app:drawable_width="@dimen/space_30_dp" />

    <ImageView
        android:id="@+id/right_image"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/back_and_set"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:scaleType="centerInside"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/right_text"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/back_and_set"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:scaleType="centerInside"
        android:text="说明"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font_14_sp"
        android:visibility="gone" />

</RelativeLayout>