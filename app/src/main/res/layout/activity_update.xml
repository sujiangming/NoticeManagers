<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jdry.noticemanagers.mvp.view.custom.TopBarView
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/space_20_dp"
        android:paddingRight="@dimen/space_20_dp"
        android:paddingTop="@dimen/space_30_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_44_dp"
            android:layout_marginTop="@dimen/space_38_dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_12_dp"
            android:paddingRight="@dimen/space_12_dp">

            <ImageView
                android:layout_width="@dimen/space_30_dp"
                android:layout_height="@dimen/space_30_dp"
                android:src="@drawable/phone" />

            <EditText
                android:id="@+id/et_user_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:maxLength="11"
                android:maxLines="1"
                android:paddingLeft="@dimen/space_20_dp"
                android:textColor="#353535"
                android:textColorHint="#d9d9d9"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/font_16_sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1_px"
            android:layout_marginLeft="@dimen/space_44_dp"
            android:layout_marginRight="@dimen/space_12_dp"
            android:background="#555555" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_44_dp"
            android:layout_marginTop="@dimen/space_38_dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_12_dp"
            android:paddingRight="@dimen/space_12_dp">

            <ImageView
                android:layout_width="@dimen/space_30_dp"
                android:layout_height="@dimen/space_30_dp"
                android:src="@drawable/verifycode" />

            <EditText
                android:id="@+id/et_user_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="输入原始密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingLeft="@dimen/space_20_dp"
                android:textColor="#353535"
                android:textColorHint="#d9d9d9"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/font_16_sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1_px"
            android:layout_marginLeft="@dimen/space_44_dp"
            android:layout_marginRight="@dimen/space_12_dp"
            android:background="#555555" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_44_dp"
            android:layout_marginTop="@dimen/space_38_dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_12_dp"
            android:paddingRight="@dimen/space_12_dp">

            <ImageView
                android:layout_width="@dimen/space_30_dp"
                android:layout_height="@dimen/space_30_dp"
                android:src="@drawable/verifycode" />

            <EditText
                android:id="@+id/et_user_pwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="请输入新密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingLeft="@dimen/space_20_dp"
                android:textColor="#353535"
                android:textColorHint="#d9d9d9"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/font_16_sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1_px"
            android:layout_marginLeft="@dimen/space_44_dp"
            android:layout_marginRight="@dimen/space_12_dp"
            android:background="#555555" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_44_dp"
            android:layout_marginLeft="@dimen/space_12_dp"
            android:layout_marginRight="@dimen/space_12_dp"
            android:layout_marginTop="@dimen/space_70_dp"
            android:background="@drawable/login_gradient_bg"
            android:text="修改"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_18_sp" />
    </LinearLayout>

</LinearLayout>